@model IEnumerable<NewsViewModel>

<h1>Manage News</h1>

<div class="btn-group btn-group-sm">
    <a asp-action="CreateNews" class="btn btn-success">+</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Published At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var AllNews in Model)
        {
            <tr>
                <td>@AllNews.Author</td>
                <td>@AllNews.Title</td>
                <td>@AllNews.PublishedAt</td>
                <td class="btn-group btn-group-sm">
                    <div>
                        <a asp-action="EditNews" asp-route-id="@AllNews.NewsId" class="btn btn-success">Edit</a>
                    </div>
                </td>
                <td class="btn-group btn-group-sm">
                    <div>
                        <a asp-action="DeleteNews" asp-route-id="@AllNews.NewsId" class="btn btn-success">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: Arial, sans-serif;
        background-image: url('https://media.istockphoto.com/id/1407271745/photo/gray-background.webp?b=1&s=170667a&w=0&k=20&c=aAk4qTe2O_TAt77Nx9ROXTXyGTgXN0FFn1eep4RkvC0=');
        background-size: cover;
        background-repeat: no-repeat;
    }



    h1 {
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    td.btn-group {
        white-space: nowrap;
    }

    .btn {
        padding: 5px 10px;
        font-size: 14px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>